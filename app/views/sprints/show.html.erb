<%- model_class = Sprint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @sprint.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @sprint.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_id) %>:</strong></dt>
  <dd><%= @sprint.team_id %></dd>
</dl>
<hr/>
<h4>Stories</h4>

<div class='story-list'>
	<table class="table table-striped">
		<thead>
		<tr>
	      <th>ID</th>
	      <th>Name</th>
	      <th>Total Effort</th>
	      <th>Sprint ID</th>
		  <th>Bugs</th>
		  <th>Completed</th>
	      <th>Created</th>
	    </tr>
	</thead>
	<tbody>
		<% @sprint.stories.each do |story| %>
		
		<tr>
			<td><%= story.id%></td>
			<td><%= story.name%></td>
			<td><%= story.total_effort%></td>
			<td><%= @sprint.id%></td>
			<td><%= story.bugs.count %></td>
			<td><%= story.completed%></td>
			<td><%= story.created_at%></td>
		</tr>
		
		<% end%>
	</tbody>
	</table>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sprints_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sprint_path(@sprint), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sprint_path(@sprint),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
